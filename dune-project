(lang dune 2.7)
(name camyll)
(version 0.2.0)
(generate_opam_files true)

(license MIT)
(authors "Alan Hu <alanh@ccs.neu.edu>")
(maintainers "Alan Hu <alanh@ccs.neu.edu>")
(homepage "https://alan-j-hu.github.io/camyll")
(source (github alan-j-hu/camyll))

(package
 (name camyll)
 (synopsis "A static site generator")
 (description "Camyll is a static site generator.

Features:

- Conversion from Markdown to HTML
- Syntax highlighting of any language via user-provided TextMate grammars
- Post tagging
- Processing of literate Agda")
 (tags (blog web website))
 (depends
  (calendar (and (>= 2.01) (< 3.0)))
  (cmdliner (and (>= 1.0) (< 2.0)))
  (httpaf (and (>= 0.7.1) (< 0.8)))
  (httpaf-lwt-unix (and (>= 0.7.1) (< 0.8)))
  (jingoo (and (>= 1.4) (< 2.0)))
  (lambdasoup (and (>= 0.7) (< 0.8)))
  (markup (and (>= 0.8) (< 2.0)))
  (ocaml (>= 4.12))
  (omd (= 2.0.0~alpha2))
  (textmate-language (and (>= 0.3.1) (< 0.4)))
  (plist-xml (< 0.4))
  (re (and (>= 1.9) (< 2.0)))
  (toml (and (>= 7) (< 8)))))
